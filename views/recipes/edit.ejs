<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a Recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit the <%= recipe.name %> Recipe</h1>
    <a href="/recipes">Back to Recipes</a>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= recipe.name %>" />

      <label for="instructions">Instructions:</label>
      <textarea name="instructions" id="instructions" value="<%= recipe.instructions %>"></textarea>
      
      <label for="ingredients">Ingredients:</label>
        <!-- ForEach loop to show options based on ingredients available-->
        <select id="ingredients" name="ingredients" multiple>
          <% ingredients.forEach((ingredient) => { %>
            <option value="<%= ingredient._id %>" <% if (recipe.ingredients.includes(ingredient._id)) { %> selected <% }; %>><%= ingredient.name %></option>
          <% }); %>
        </select>

      <button type="submit">Edit Recipe</button>
    </form>
  </body>
</html>